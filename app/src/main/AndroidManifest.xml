<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csci.apsu.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayWildActivity"
            android:label="WildCard Tic-Tac-Toe">
        </activity>
        <activity android:name=".PlaySosActivity"
            android:label="SOS Tic-Tac-Toe">
        </activity>
        <activity android:name=".PlayNumericalActivity"
            android:label="Numerical Tic-Tac-Toe">
        </activity>
        <activity android:name=".InstructionsActivity"
            android:label="Instructions for each Tic-Tac-Toe variant">
        </activity>
        <activity android:name=".GameEndActivity"
            android:label="End of the game">
        </activity>
    </application>

</manifest>